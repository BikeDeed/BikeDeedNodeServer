<div class="modal-wrapper">
  <div class="modal-container">
    <h3 slot="modal-header">Bike Details</h3>
    <span slot="modal-body">
      <p>Manufacturer: {{ bike.manufacturer }}</p>
      <p>Serial Number: {{ bike.serialNumber }}</p>
      <p>Owner Address: <br>
        <a href="https://etherscan.io/address/{{bike.owner}}">{{bike.owner}}</a></p>
      <div class="row">
        <div class="column">
          <a href="{{bike.bikeUrl}}"><img class="bikeImage" src="{{bike.bikeUrl}}" alt="{{bike.name}}"></a>
        </div>
        <div class="column">
          <img src="{{bike.qrCode}}"/>
          <br/>
           Scan with Mobile dApp
        </div>
      </div>
      <p>Date Created: {{ bike.dateCreated }}</p>
    </span>
  <!-- end modal-container -->
  </div>
<!-- end modal-wrapper -->
</div>
